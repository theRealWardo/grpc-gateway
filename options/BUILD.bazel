    name = "options_go_proto",
    importpath = "github.com/therealwardo/grpc-gateway/options",
    proto = ":options_proto",
    visibility = ["//visibility:public"],
)

go_library(
    name = "go_default_library",
    embed = [":options_go_proto"],
    importpath = "github.com/therealwardo/grpc-gateway/options",
    visibility = ["//visibility:public"],
